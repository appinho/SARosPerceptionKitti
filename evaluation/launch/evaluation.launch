<launch>

  <!-- Choose scenario-->
  <arg name="scenario" default="0000"/>

  <!-- Choose replay speed -->
  <arg name="speed" default="0.6"/>

  <!-- Choose replay delay -->
  <arg name="delay" default="3" />

  <!-- Play rosbag file -->
  <node pkg="rosbag" type="play" name="player" required="true" args="-r $(arg speed) -d $(arg delay) $(find data)/rosbags/$(arg scenario).bag"/>
  
  <!-- Run the sensor setup node -->
  <node pkg="sensors" type="sensor_setup" name="sensor_setup_node">

    <!-- Get parameters from parameter.yaml file -->
    <rosparam file="$(find sensors)/config/parameters.yaml" command="load" />
    <rosparam file="$(find detection)/config/parameters.yaml" command="load" />
  </node>

  <!-- Run the detection node -->
  <node pkg="detection" type="detection" name="detection_node">

    <!-- Get parameters from parameter.yaml file -->
    <rosparam file="$(find sensors)/config/parameters.yaml" command="load" />
    <rosparam file="$(find detection)/config/parameters.yaml" command="load" />
    
  </node>

  <!-- Run the tracking node -->
  <node pkg="tracking" type="tracking" name="tracking_node">

    <!-- Get parameters from parameter.yaml file -->
    <rosparam file="$(find tracking)/config/parameters.yaml" command="load" />
    
  </node>

  <!-- Run the visualization node -->
  <node pkg="visualization" type="visualization" name="visualization_node">
    <!-- Get scenario identifier -->
    <param name="scenario" value="$(arg scenario)" />
  </node>

  <!-- Run the evaluation node -->
  <node pkg="evaluation" type="evaluation" name="evaluation_node">

    <!-- Get scenario identifier -->
    <param name="tracking_file" value="$(find benchmark)/python/results/sha_key/data/$(arg scenario).txt" />

  </node>

</launch>
